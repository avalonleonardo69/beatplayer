extends ../layouts/_layout
block content
	.login
		.login__container
			.login__wrap
				.login__head
					a.login__logo(href="#")
						img.login__pic(src="img/logo-white.svg")
				form.login__form
					.login__body
						.login__title.login__title_sm وارد حساب کاربری خود شوید
						.login__field.field
							.field__wrap
								input.field__input(type="email" name="email" placeholder="ایمیل خود را وارد کنید" required autofocus)
						.login__field.field.field_icon
							.field__wrap
								input.field__input(type="password" name="password" placeholder="رمز عبور خود را وارد کنید" required)
								button.field__view.js-field-view(type="button")
									+i('eye')
									span.field__line
						button.login__btn.btn.btn.btn_blue(type="submit") ورود به حساب کاربری
						.login__or یا
						.login__btns
							a.login__btn.btn.btn.btn_border-gray(href="/auth")
								img.btn__pic(src="img/google.svg" width="16")
								span.btn__text ورود با حساب گوگل
						ul.login__links
							li
								a.login__link(href="/auth") نمی‌توانید وارد شوید؟
							li
								a.login__link(href="/auth/sign-up") هنوز حساب کاربری ندارید؟
				.login__bottom
					ul.login__links
						li
							a.login__link(href="/auth") قوانین و مقررات
						li
							a.login__link(href="/") صفحه اصلی
		+switchTheme('switch_theme', 'js-switch-theme')