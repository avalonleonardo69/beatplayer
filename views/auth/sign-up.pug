extends ../layouts/_layout
block content
	.login
		.login__container
			.login__wrap
				.login__head
					a.login__logo(href="#")
						img.login__pic(src="img/logo-white.svg")
				form.login__form
					.login__body
						.login__title حساب کاربری خود را ایجاد کنید
						.login__field.field
							.field__wrap
								input.field__input(type="email" name="email" placeholder="ایمیل خود را وارد کنید" required autofocus)
						.login__field.field
							.field__wrap
								input.field__input(type="name" name="name" placeholder="نام و نام خانوادگی خود را وارد کنید" required)
						.login__field.field.field_icon
							.field__wrap
								input.field__input(type="password" name="password" placeholder="رمز عبور خود را انتخاب کنید" required)
								button.field__view.js-field-view(type="button")
									+i('eye')
									span.field__line
						.login__status
							.login__progress
								.login__line
								.login__line
								.login__line
								.login__line
						.login__note با عضویت در وب سایت بیت پلیر شما با <a class="login__link" href="#">قوانین و مقررات</a> ما موافقت خواهید کرد.
						button.login__btn.btn.btn.btn_blue(type="submit") عضویت در بیت پلیر
						.login__or یا
						a.login__btn.btn.btn.btn_border-gray(href="/auth")
							img.btn__pic(src="img/google.svg" width="16")
							span.btn__text عضویت با حساب گوگل
					.login__foot
						a.login__link(href="/auth") از قبل حساب کاربری دارید؟ وارد شوید
		+switchTheme('switch_theme', 'js-switch-theme')